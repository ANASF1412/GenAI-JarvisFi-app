# JarvisFi Secrets Configuration Template
# Copy this file to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to version control

# IBM Watson Configuration (Optional - for enhanced AI features)
[watson]
assistant_api_key = "your_watson_assistant_api_key_here"
assistant_url = "https://api.us-south.assistant.watson.cloud.ibm.com"
assistant_id = "your_assistant_id_here"
nlu_api_key = "your_watson_nlu_api_key_here"
nlu_url = "https://api.us-south.natural-language-understanding.watson.cloud.ibm.com"

# OpenAI Configuration (Optional - for enhanced AI features)
[openai]
api_key = "your_openai_api_key_here"

# Currency API Configuration (Optional - for real-time rates)
[currency]
api_key = "your_currency_api_key_here"

# Application Settings
[app]
debug = false
log_level = "INFO"
encryption_key = "your_32_character_encryption_key_here"

# Database Configuration (Optional - for production)
[database]
mongodb_uri = "your_mongodb_connection_string_here"
redis_url = "your_redis_connection_string_here"
